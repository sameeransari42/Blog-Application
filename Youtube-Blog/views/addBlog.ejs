<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Add Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="cover-image" class="form-label">Cover Image</label><br>
                <input type="file" name="coverImage" id="cover-image" aria-describedby="coverImage">
            </div>
    
            <div class="mb-3">
                <label for="input-title" class="form-label">Title</label>
                <input type="text" class="form-control" placeholder="Blog title" name="title" id="input-title" aria-describedby="title">
            </div>
    
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" name="body" placeholder="Write here blog content" id="body"></textarea>
            </div>
    
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include("./partials/script") %>
</body>
</html>